<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.micha.licznik.MainActivity">

    <TextView
        android:text=":"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size"
        android:id="@+id/textView" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/textView">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <Button
            android:text="+"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginLeft="@dimen/margin_button"
            android:id="@+id/button1i" />
        <Button
            android:text="+"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginLeft="@dimen/margin_button"
            android:id="@+id/button2i" />
</LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:text="0"
                android:layout_width="@dimen/number_width"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:background="@android:color/holo_blue_dark"
                android:id="@+id/textView2"
                android:layout_marginLeft="@dimen/margin_number"
                android:textAlignment="center"
                android:layout_weight="0" />
            <TextView
                android:text="0"
                android:textSize="@dimen/text_size"
                android:background="@android:color/holo_blue_dark"
                android:layout_width="@dimen/number_width"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/textView3"
                android:layout_marginLeft="@dimen/margin_number"
                android:layout_marginRight="@dimen/margin_number"
                android:layout_weight="0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <Button
                android:text="-"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_marginLeft="@dimen/margin_button"
                android:id="@+id/button1d" />
            <Button
                android:text="-"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_marginLeft="@dimen/margin_button"
                android:id="@+id/button2d" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textView"
        android:layout_centerVertical="true"
       >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <Button
                android:text="+"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_marginLeft="@dimen/margin_button"
                android:id="@+id/button3i" />

            <Button
                android:text="+"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_marginLeft="@dimen/margin_button"
                android:id="@+id/button4i" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:text="0"
                android:layout_width="@dimen/number_width"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:background="@android:color/holo_blue_dark"
                android:id="@+id/textView4"
                android:layout_marginLeft="@dimen/margin_number"
                android:textAlignment="center"
                android:layout_weight="0" />
            <TextView
                android:text="0"
                android:textSize="@dimen/text_size"
                android:background="@android:color/holo_blue_dark"
                android:layout_width="@dimen/number_width"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_marginLeft="@dimen/margin_number"
                android:textAlignment="center"
                android:layout_weight="0" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <Button
                android:text="-"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_marginLeft="@dimen/margin_button"
                android:id="@+id/button3d" />

            <Button
                android:text="-"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_marginLeft="@dimen/margin_button"

                android:id="@+id/button4d" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom|end"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/buttonStart" />

        <Button
            android:text="Clean"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/buttonStop" />
        <Button
            android:text="Pause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/buttonPause" />


    </LinearLayout>


</RelativeLayout>
